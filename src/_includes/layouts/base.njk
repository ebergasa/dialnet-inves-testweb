<!doctype html>
<html lang="{{ lang }}">
  <head>
    {% include "partials/head.njk" %}
  </head>
  <body>
    <header class="container">
      <a class="brand" href="{{ site.baseUrl }}{{ lang }}/">{{ site.title }}</a>
      <nav class="navbar">        
        {% include "partials/navbar.njk" %}
      </nav>

    </header>

    
    <main class="container">
      <article>
        <h1>{{ title }}</h1>
            {{ content | safe }}
      </article>
    </main>

  
    <footer class="container">
      <nav>        
        {% include "partials/navfooter.njk" %}
      </nav>

      <p>&copy; {{ site.title }} {{ "" | year }}</p>
    </footer>
  </body>
</html>
