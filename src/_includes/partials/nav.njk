<{% set current = (page.url | replace('/index.html','/')) %}
<nav>
  <ul class="nav">
    {% for item in nav[lang] %}
      {% set isActive = (current == item.url) %}
      <li>
        <a href="{{ site.baseUrl }}{{ item.url }}" class="{% if isActive %}active{% endif %}">
          {{ item.title }}
        </a>
        
      </li>
    {% endfor %}
  </ul>
</nav>