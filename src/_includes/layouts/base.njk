<!doctype html>
<html lang="{{ lang }}">
  <head>
    {% include "partials/head.njk" %}
  </head>   
  <body>
    <header class="container-fluid site-header">
      <a class="brand" href="{{ site.baseUrl }}{{ lang }}/">{{ site.title }}</a>
      <section class="container">
      <nav class="navbar">        
        {%   include "partials/navbar.njk" %}
      </nav>
      </section>
    </header>

    
    <main class="container">
      <article>
        <h1>{{ title }}</h1>
            {{ content | safe }}
      </article>
    </main>


    <footer class="container-fluid">
    <section class="container">

      <nav>
        {% include "partials/navfooter.njk" %}
      </nav>
      <p>&copy; {{ site.title }} {{ "" | year }}</p>
    </section>
    
    </footer>
  </body>
</html>
